<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--在DOWN事件后，MOVE滑动前，多指触摸的适配处理-->
    <attr name="swiperefresh_adaptPointerDown" format="boolean" />

    <!--是否根据滑动距离适配Child的Padding值-->
    <attr name="swiperefresh_fitChildPadding" format="boolean" />

    <!--根据滑动距离适配Child的Padding值的同时，是否适配Child的Scroll值-->
    <attr name="swiperefresh_fitChildScroll" format="boolean" />

    <!--顶部是否可用-->
    <attr name="swiperefresh_header_enabled" format="boolean" />
    <!--底部是否可用-->
    <attr name="swiperefresh_footer_enabled" format="boolean" />

    <!--顶部是否可刷新-->
    <attr name="swiperefresh_header_refreshable" format="boolean" />
    <!--底部是否可刷新-->
    <attr name="swiperefresh_footer_refreshable" format="boolean" />

    <!--顶部是否折叠刷新-->
    <attr name="swiperefresh_header_folded" format="boolean" />
    <!--底部是否折叠刷新-->
    <attr name="swiperefresh_footer_folded" format="boolean" />

    <!--顶部视图-->
    <attr name="swiperefresh_header_layout" format="reference" />
    <!--底部视图-->
    <attr name="swiperefresh_footer_layout" format="reference" />

    <declare-styleable name="SwipeRefreshLayout">

        <!--在DOWN事件后，MOVE滑动前，多指触摸的适配处理-->
        <attr name="swiperefresh_adaptPointerDown" />

        <!--是否根据滑动距离适配Child的Padding值-->
        <attr name="swiperefresh_fitChildPadding" />

        <!--根据滑动距离适配Child的Padding值的同时，是否适配Child的Scroll值-->
        <attr name="swiperefresh_fitChildScroll" />

        <!--顶部是否可用-->
        <attr name="swiperefresh_header_enabled" />
        <!--底部是否可用-->
        <attr name="swiperefresh_footer_enabled" />

        <!--顶部是否可刷新-->
        <attr name="swiperefresh_header_refreshable" />
        <!--底部是否可刷新-->
        <attr name="swiperefresh_footer_refreshable" />

        <!--顶部是否折叠刷新-->
        <attr name="swiperefresh_header_folded" />
        <!--底部是否折叠刷新-->
        <attr name="swiperefresh_footer_folded" />

        <!--顶部视图-->
        <attr name="swiperefresh_header_layout" />
        <!--底部视图-->
        <attr name="swiperefresh_footer_layout" />

    </declare-styleable>

</resources>